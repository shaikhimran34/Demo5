pipeline{
    agent any       
    stages{
        stage("A"){
            steps{
                echo "executing First"
            }
            
        }
    
    stages{
        stage("B"){
            steps{
                echo "executing Second"
            }
            
        }
    
    stages{
        stage("C"){
            steps{
                echo "executing Third"
            }
            
        }
    }
    post{
        always{
            echo "always"
        }
        success{
            echo "pipeline executed successfully "
        }
        failure{
            echo "pipeline execution failed"
        }
    }
}
